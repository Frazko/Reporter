{
  "name": "electron-angular-boilerplate",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/main/main.js",
  "scripts": {
    "ng": "ng",
    "start": "node server.js",
    "start:script": "node ./start -c",
    "start:electron": "electron .",
    "watch": "npm-run-all --parallel watch:main watch:renderer ",
    "watch:main": "webpack --config webpack.electron.js --watch",
    "watch:renderer": "ng build --aot --source-map --watch",
    "build:main": "webpack --config webpack.electron.js",
    "build:renderer:dev": "ng build --aot --sourcemap",
    "build:renderer:prod": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "ng build --aot -prod"
  },
  "files": [
    "*.js",
    "dist",
    "node_modules"
  ],
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.7",
    "@angular/cdk": "^6.4.7",
    "@angular/cli": "6.2.1",
    "@angular/common": "6.1.7",
    "@angular/compiler": "6.1.7",
    "@angular/core": "6.1.7",
    "@angular/forms": "6.1.7",
    "@angular/http": "6.1.7",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "6.1.7",
    "@angular/platform-browser-dynamic": "6.1.7",
    "@angular/router": "6.1.7",
    "core-js": "^2.5.7",
    "express": "^4.16.3",
    "ngx-electron": "^1.0.4",
    "nodemailer": "^4.6.8",
    "rxjs": "^6.3.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/compiler-cli": "6.1.7",
    "@angular/language-service": "6.1.7",
    "@types/chokidar": "^1.7.4",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "chokidar": "^2.0.4",
    "codelyzer": "^4.4.4",
    "electron": "^2.0.8",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "protractor": "^5.4.0",
    "ts-loader": "^4.3.1",
    "ts-node": "~4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2",
    "webpack": "^4.17.2",
    "webpack-node-externals": "^1.7.2",
    "yargs-parser": "^9.0.2"
  },
  "engines": {
    "node": "6.11.1",
    "npm": "3.10.9"
  }
}
